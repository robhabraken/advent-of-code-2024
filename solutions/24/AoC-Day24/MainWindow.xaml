<Window x:Class="AoC_Day24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AoC_Day24"
        mc:Ignorable="d"
        Title="AoC Day 24: Crossed Wires" Height="450" Width="800">
    <ScrollViewer>
        <Grid>
            <DockPanel Name="dockPanel" Height="30" VerticalAlignment="Top" LastChildFill="False" HorizontalAlignment="Right" Margin="0,10,10,0" Panel.ZIndex="10000">
                <Button Name="buttonSimulate" Width="100" Margin="10,0,0,0">Simulate</Button>
                <Button Name="buttonRepace" Width="100" Margin="10,0,0,0">Repare</Button>
            </DockPanel>
            <Canvas Name="canvas"></Canvas>
        </Grid>
    </ScrollViewer>
</Window>
